<%=
  current_user_ids = [User.current.id] + User.current.group_ids

  query = IssueQuery.new(:name => l("issues_next"), :user => User.current)
  query.add_filter "assigned_to_id", "=", current_user_ids
  query.add_filter "status_id", "o"
  query.add_filter "due_date", ">=", [(Date.today+1).strftime("%Y-%m-%d")]
  query.column_names = settings[:columns].presence || ["project", "tracker", "status", "subject"]
  query.sort_criteria = settings[:sort].presence || [["due_date", "asc"]]
  issues = query.issues()

  queryw = IssueQuery.new(:name => l("issues_next_without_due"), :user => User.current)
  queryw.add_filter "assigned_to_id", "=", current_user_ids
  queryw.add_filter "status_id", "o"
  queryw.add_filter "due_date", "!*"
  queryw.column_names = settings[:columns].presence || ["project", "tracker", "status", "subject"]
  queryw.sort_criteria = settings[:sort].presence || [["due_date", "desc"]]
  issues = issues + queryw.issues()

  render :partial => "my/my_block_issues", :locals => {:query => query, :issues => issues, :block => block}
%>