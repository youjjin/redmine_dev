<h3><%= l(title) %></h3>
<table class="indicator summary">
  <tr>
    <td><div class="circle <%= issuesopened.length > 0 ? 'due' : 'nothing' %>"><h1><%= link_to issuesopened.length, _project_issues_path(queryopened.project, queryopened.as_params) %></h1></div></td>
    <td><div class="circle <%= issuesclosed.length > 0 ? 'today' : 'nothing' %>"><h1><%= link_to issuesclosed.length, _project_issues_path(queryclosed.project, queryclosed.as_params) %></h1></div></td>
  </tr>
  <tr>
    <td><%= l(:label_open_issues_plural) %></td>
    <td><%= l(:label_closed_issues_plural) %></td>
  </tr>
</table>